#include <stdio.h>
int main () {
    printf("WELCOME TO MY TUITION FEE CALCULATOR\n");
    int units_takenS1, units_takenS2;
    double penalty_blocksS1, penalty_blocksS2;
    double tuition_per_unit = 5534;
    double penalty_fee_per_12_units = 1000; //every 12 units is +1000 to tuition fee
    double total_fee, total_fee_1st_semester, total_fee_2nd_semester;

    printf("Enter the number of units you will be taking on your first semester:");
    scanf("%d", &units_takenS1);
    printf("Enter the number units you will be taking on your second semester:");
    scanf("%d", &units_takenS2);

    total_fee_1st_semester = units_takenS1 * tuition_per_unit;
    total_fee_2nd_semester = units_takenS2 * tuition_per_unit;

    
    penalty_blocksS1 = units_takenS1 / 12; //penalty blocks is how many times the penalty fee will be multiplied
    penalty_blocksS2 = units_takenS2 / 12;//since every 12 units is a penalty block, its divided by 12


    total_fee_1st_semester += penalty_blocksS1 * penalty_fee_per_12_units;//then the amount of penalty blocks
    printf("\n1st sem calculation: (%lf * %d) + (%lf * %lf)\n", tuition_per_unit, units_takenS1, penalty_blocksS1, penalty_fee_per_12_units);
    total_fee_2nd_semester += penalty_blocksS2 * penalty_fee_per_12_units;//is multiplied to the penalty fee
    printf("\n2nd sem calculation: (%lf * %d) + (%lf * %lf)\n", tuition_per_unit, units_takenS2, penalty_blocksS2, penalty_fee_per_12_units);

    total_fee = total_fee_1st_semester + total_fee_2nd_semester; 
    printf("\ntotal_fee caculation is %lf + %lf\n", total_fee_1st_semester, total_fee_2nd_semester);
    printf("\nYOUR BILL FOR TWO SEMESTERS IS %lf\n", total_fee);




return 0;
}
